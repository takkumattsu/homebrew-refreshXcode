#!/bin/sh

# =====================================
# variable

DERIVED_DATA_DIR=~/Library/Developer/Xcode/DerivedData
DEVICE_SUPPORT_DIR=~/Library/Developer/Xcode/iOS\ DeviceSupport
DIRS="$DERIVED_DATA_DIR"
PROGNAME=$(basename $0)
VERSION="1.5"
COLOR_ESC="\e["
COLOR_ESC_END="m"
WHITE_UNDER="${COLOR_ESC}31;;4${COLOR_ESC_END}"
COLOR_GRAY="${COLOR_ESC}30;1${COLOR_ESC_END}"
COLOR_WHITE=${COLOR_ESC}31${COLOR_ESC_END}
COLOR_YELLOW=${COLOR_ESC}33${COLOR_ESC_END}
COLOR_BLUE=${COLOR_ESC}34${COLOR_ESC_END}
COLOR_GREEN=${COLOR_ESC}32${COLOR_ESC_END}
COLOR_PURPLE=${COLOR_ESC}35${COLOR_ESC_END}
COLOR_CYAN=${COLOR_ESC}36${COLOR_ESC_END}
COLOR_OFF=${COLOR_ESC}${COLOR_ESC_END}
IS_CONTAIN_DEVICE_SUPPORT=false
# echo -eã‚’ä½¿ã†ã¨ç’°å¢ƒã«ä¾å­˜ã™ã‚‹ãŸã‚
# è‰²ã‚’å‡ºåŠ›ã™ã‚‹æ™‚ã¯ã“ã¡ã‚‰ã‚’åˆ©ç”¨
ECHO=printf

# =====================================
# function

# Input fucntion
function readInput()
{
  echo ""
  ${ECHO} "${COLOR_YELLOW}Delete Cache of Xcode. Are you sure ?${COLOR_OFF} (y/n) > "
  read INPUT
  echo ""
  # ,ã‚’åŒºåˆ‡ã‚Šæ–‡å­—ã«
  PRE_IFS=$IFS
  IFS=$','
  if [ "$INPUT" == "y" ]; then
    for dir in ${DIRS}
    do
      isExistCacheDirectory ${dir}
      if [ $? -eq -1 ]; then
        continue
      fi
      echo "Delete ${dir} ..."
      rm -rf "${dir}"
    done
  elif [ "$INPUT" == "n" ]; then
    echo "Bye.."
    exit
  else
    echo "Please \"y\" or \"n\""
    readInput
  fi
}

# Check directory function
# ç¬¬ä¸€å¼•æ•°: ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒª
# ç¬¬äºŒå¼•æ•°: å¼•æ•°ã«falseã§å‡ºåŠ›æŠ‘åˆ¶
# (flaseä»¥å¤–ã‚’æŒ‡å®šã—ãŸæ™‚ã¯è¡¨ç¤º)
function isExistCacheDirectory()
{
  if [ -e "$1" ]; then
    return 0
  else
    if [ "$2" != "false" ]; then
      ${ECHO} "âš ï¸ ${COLOR_YELLOW} N/A${COLOR_OFF}	$1\n"
    fi
    return -1
  fi
}

# å‰Šé™¤ã™ã‚‹ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã®ã‚µã‚¤ã‚ºè¡¨ç¤º
function showSize()
{
  # ã‚¹ãƒšãƒ¼ã‚¹ãŒå…¥ã‚‹ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªå¯¾ç­–
  PRE_IFS=$IFS
  IFS=$','
  local dirs=()
  for dir in ${DIRS}
  do
    isExistCacheDirectory ${dir}
    if [ $? -eq 0 ]; then
      du -sh $dir
    fi
  done
  IFS=$PRE_IFS
}

# ãƒˆãƒ¼ã‚¿ãƒ«å‰Šé™¤ã‚µã‚¤ã‚ºè¡¨ç¤º
function showTotalSize()
{
  # ã‚¹ãƒšãƒ¼ã‚¹ãŒå…¥ã‚‹ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªå¯¾ç­–
  PRE_IFS=$IFS
  IFS=$','
  local dirs=()
  for dir in ${DIRS}
  do
    isExistCacheDirectory ${dir} "false"
    if [ $? -eq 0 ]; then
      if [ ${#dirs[*]} -eq 0 ]; then
        dirs=${dir}
      else
        dirs+=",${dir}"
      fi
    fi
  done
  if [ ${#dirs[*]} -eq 0 ]; then
    echo "0M"
    return 0
  fi
  local RESULT_LIST=$(du -shc $dirs)
  IFS=$'\n'
  for last in $RESULT_LIST
  do :
  done
  IFS=$PRE_IFS
  echo $last | cut -d" " -f 1
}

function showSizeMessage()
{
    echo "============================================================================================"
    showSize
    echo "============================================================================================"
    ${ECHO} "Total : ${COLOR_PURPLE}$(showTotalSize)${COLOR_OFF} ğŸ—‘\n"
    return 0
}
function usage()
{
  echo "Usage: $PROGNAME [OPTION]"
  echo 
  ${ECHO} "The default behavior is to delete ${COLOR_CYAN}~/Library/Developer/Xcode/DerivedData${COLOR_OFF} .\n"
  echo "You can add directories to be deleted with the options."
  echo
  echo "OPTION"
  ${ECHO} %b "-s		If you add -s option, add ${COLOR_CYAN}~/Library/Developer/Xcode/iOS DeviceSupport${COLOR_OFF} to be deleted.\n"
  echo "-h, --help	show help"
  echo "    --version	show version"
  echo "-n, --dry-run	display the size to be deleted"
  echo
  exit 0
}

# =====================================
# main
for OPT in "$@"
do
  case "$OPT" in
  # ãƒ˜ãƒ«ãƒ—ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸
  '-h'|'--help' )
    usage
    exit 0
    ;;
  # ãƒãƒ¼ã‚¸ãƒ§ãƒ³ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸
  '--version' )
    echo $VERSION
    exit 0
    ;;
  # å‰Šé™¤ã•ã‚Œã‚‹ã‚µã‚¤ã‚ºè¡¨ç¤º
  '-n'|'--dry-run' )
    echo
    ${ECHO} "${COLOR_CYAN}Display size to be deleted.${COLOR_OFF}\n"
    echo
    ## dry-runã®æ™‚ã¯ã™ã¹ã¦ã®ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã‚’è¿½åŠ 
    DIRS+=",${DEVICE_SUPPORT_DIR}"
    showSizeMessage
    exit 0
    ;;
  # iOS DeviceSupportã‚’å‰Šé™¤å¯¾è±¡ã«è¿½åŠ 
  '-s' )
    DIRS+=",${DEVICE_SUPPORT_DIR}"
    IS_CONTAIN_DEVICE_SUPPORT=true
    ;;
  * )
    usage
    exit 0
    ;;
  esac
done
# ãƒ¡ã‚¤ãƒ³å‡¦ç†
echo
${ECHO} "${WHITE_UNDER}This script will clean the cache of Xcode.${COLOR_OFF}\n"
if ! $IS_CONTAIN_DEVICE_SUPPORT ; then
  echo
  ${ECHO} %b "âœï¸${COLOR_GRAY} If you add ${COLOR_OFF}-s${COLOR_GRAY} option, add ~/Library/Developer/Xcode/iOS DeviceSupport to be deleted.${COLOR_OFF}\n"
fi
echo
showSizeMessage
readInput

echo
echo "Done.."
